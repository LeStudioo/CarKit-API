              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Vehicles"
        ],
        "summary": "Crée un nouveau véhicule",
        "description": "Ajoute un nouveau véhicule pour l'utilisateur connecté",
